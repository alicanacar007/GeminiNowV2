{
  "name": "geminow-backend",
  "version": "0.1.0",
  "description": "Backend service for the GemiNow assistant",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
