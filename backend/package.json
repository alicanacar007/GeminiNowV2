    "google-cloud-text-to-speech": "^0.3.2",
    "ws": "^8.17.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.16.11",
    "@types/ws": "^8.5.10",
    "kill-port": "^2.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.6.3"
  }
}
